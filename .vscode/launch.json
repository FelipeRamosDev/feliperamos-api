   "version": "0.2.0",
   "configurations": [
      {
         "command": "npm run dev:watch",
         "name": "Run npm dev (ts-node)",
         "request": "launch",
         "type": "node-terminal"
      },
      {
         "name": "Debug Main App",
         "type": "node",
         "request": "launch",
         "program": "${workspaceFolder}/app.ts",
         "runtimeArgs": ["-r", "ts-node/register"],
         "env": {
            "NODE_ENV": "development"
         },
         "console": "integratedTerminal",
         "restart": true,
         "sourceMaps": true,
         "outFiles": ["${workspaceFolder}/dist/**/*.js"],
         "skipFiles": ["<node_internals>/**"]
      },
      {
         "name": "Debug AI Service",
         "type": "node",
         "request": "launch",
         "program": "${workspaceFolder}/src/containers/ai.service.ts",
         "runtimeArgs": ["-r", "ts-node/register"],
         "env": {
            "NODE_ENV": "development"
         },
         "console": "integratedTerminal",
         "restart": true,
         "sourceMaps": true,
         "outFiles": ["${workspaceFolder}/dist/**/*.js"],
         "skipFiles": ["<node_internals>/**"]
      },
      {
         "name": "Debug API Server Service",
         "type": "node",
         "request": "launch",
         "program": "${workspaceFolder}/src/containers/api-server.service.ts",
         "runtimeArgs": ["-r", "ts-node/register"],
         "env": {
            "NODE_ENV": "development"
         },
         "console": "integratedTerminal",
         "restart": true,
         "sourceMaps": true,
         "outFiles": ["${workspaceFolder}/dist/**/*.js"],
         "skipFiles": ["<node_internals>/**"]
      },
      {
         "name": "Debug Slack Service",
         "type": "node",
         "request": "launch",
         "program": "${workspaceFolder}/src/containers/slack.service.ts",
         "runtimeArgs": ["-r", "ts-node/register"],
         "env": {
            "NODE_ENV": "development"
         },
         "console": "integratedTerminal",
         "restart": true,
         "sourceMaps": true,
         "outFiles": ["${workspaceFolder}/dist/**/*.js"],
         "skipFiles": ["<node_internals>/**"]
      }
   ]
}
