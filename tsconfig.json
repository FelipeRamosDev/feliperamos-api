{
   "compilerOptions": {
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "target": "ES2015", // Ensures private fields are supported
      "module": "NodeNext", // Modern module system
      "moduleResolution": "nodenext"
   },
   "include": ["*.ts", "*.service.ts", "*.route.ts", "src/**/*.ts"],
   "exclude": ["dist"]
}
